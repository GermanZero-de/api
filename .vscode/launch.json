  "version": "0.2.0",
  "configurations": [
  {
    "type": "node",
    "runtimeVersion": "12.13.0",
    "request": "launch",
    "name": "Update contacts",
    "program": "${workspaceFolder}/src/update-contacts.js",
    "skipFiles": [
      "<node_internals>/**"
    ]
  },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach",
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "runtimeVersion": "12.13.0",
      "request": "launch",
      "name": "Launch server",
      "program": "${workspaceFolder}/src/index.js",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "runtimeVersion": "12.13.0",
      "request": "launch",
      "name": "Run tests",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": ["test/**/*.js"]
    }
  ]
}